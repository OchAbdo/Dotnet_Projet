@model Affectation


<style>
    form {
        max-width: 500px;
        margin: 0 auto;
        font-family: Arial, sans-serif;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    h2 {
        text-align: center;
        font-family: Arial, sans-serif;
        color: #333;
    }

    label {
        display: block;
        margin-top: 10px;
        font-weight: bold;
        color: #333;
    }

    input[type="text"],
    input[type="date"] {
        width: 100%;
        padding: 8px;
        margin-top: 4px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .text-danger {
        color: red;
        font-size: 0.9em;
    }

    button[type="submit"] {
        margin-top: 20px;
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<h2>Ajouter une Affectation</h2>

<form asp-action="Create">

    <input type="hidden" asp-for="tacheId" />

    <label>Date Affectation</label>
    <input type="date" asp-for="dateaffectation" />
    <span asp-validation-for="dateaffectation" class="text-danger"></span>
   
    <button type="submit">Créer</button>
</form>


