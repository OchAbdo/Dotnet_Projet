@model Affectation

@{
    var list = ViewBag.listutilisateur;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Ajouter une Affectation</h2>

    <form asp-action="Create" class="border rounded p-4 shadow-sm bg-light mx-auto" style="max-width: 500px;">

        <input type="hidden" asp-for="tacheId" />

        <div class="mb-3">
            <label asp-for="dateaffectation" class="form-label">Date Affectation</label>
            <input asp-for="dateaffectation" type="date" class="form-control" />
            <span asp-validation-for="dateaffectation" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="utilisateurId" class="form-label">Sélectionner un Utilisateur</label>
            <select asp-for="utilisateurId" class="form-select">
                <option value="">-- Choisir Utilisateur --</option>
                @for (int i = 0; i < list.Count; i++)
                {
                    <option value="@list[i].id">@list[i].nom @list[i].prenom</option>
                }
            </select>
            <span asp-validation-for="utilisateurId" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Créer</button>
    </form>
</div>