@model IEnumerable<Projet.Models.Rapport>

<style>
    h2 {
        font-family: Arial, sans-serif;
        color: #333;
    }

    .btn-ajouter {
        display: inline-block;
        padding: 8px 12px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f4f4f4;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .action-links a {
        margin-right: 10px;
        text-decoration: none;
        color: #007bff;
    }

        .action-links a:hover {
            text-decoration: underline;
        }
</style>

<h2>Liste des Rapports</h2>

<a asp-controller="Projet" asp-action="Index" class="btn-ajouter">Voir Projets</a>

<table>
    <thead>
        <tr>
            <th>id</th>
            <th>Continu</th>
            <th>Utilisateur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rapport in Model)
        {
            <tr>
                <td>@rapport.id</td>
                <td>@rapport.continu</td>
                <td>@rapport.utilisateurId</td>
                <td class="action-links">
                    <a asp-action="Delete" asp-route-id="@rapport.id" asp-route-projetId="@rapport.projetId">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
