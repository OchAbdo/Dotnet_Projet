@model IEnumerable<Tache>
@{
    var projetId = ViewBag.ProjetId;
}
<div class="container mt-4">
    <h2 class="mb-4">Liste des Tâches</h2>

    <div class="mb-3 d-flex gap-2">
        <a asp-controller="Projet" asp-action="Index" class="btn btn-primary">Voir Projets</a>
        <a asp-action="Create" asp-route-projetId="@projetId" class="btn btn-success">Ajouter une tâche</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tache in Model)
                {
                    <tr>
                        <td>@tache.titre</td>
                        <td>
                            <div class="d-flex gap-2 flex-wrap">
                                <a asp-controller="Affectation" asp-action="Index" asp-route-tacheId="@tache.id" class="btn btn-outline-primary btn-sm">
                                    Voir les Affectations
                                </a>
                                <a asp-action="Delete" asp-route-id="@tache.id" asp-route-projetId="@projetId" class="btn btn-outline-danger btn-sm">
                                    Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
