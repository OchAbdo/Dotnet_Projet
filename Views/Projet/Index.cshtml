@model IEnumerable<Project>

<div class="container mt-4">
    <h2 class="mb-4">Liste des Projets</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Ajouter un projet</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var projet in Model)
                {
                    <tr>
                        <td>@projet.titre</td>
                        <td>
                            <div class="d-flex flex-wrap gap-2">
                                <a asp-controller="Tache" asp-action="Index" asp-route-projetId="@projet.id" class="btn btn-outline-primary btn-sm">
                                    Voir les tâches
                                </a>
                                <a asp-controller="Rapport" asp-action="Index" asp-route-projetId="@projet.id" class="btn btn-outline-secondary btn-sm">
                                    Voir les rapports
                                </a>
                                <a asp-action="Delete" asp-route-id="@projet.id" class="btn btn-outline-danger btn-sm">
                                    Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>