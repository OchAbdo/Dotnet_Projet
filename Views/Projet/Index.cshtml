@model IEnumerable<Project>

<style>
    h2 {
        font-family: Arial, sans-serif;
        color: #333;
    }

    .btn-ajouter {
        display: inline-block;
        padding: 8px 12px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f4f4f4;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .action-links a {
        margin-right: 10px;
        text-decoration: none;
        color: #007bff;
    }

    .action-links a:hover {
        text-decoration: underline;
    }
</style>

<h2>Liste des Projets</h2>

<a asp-action="Create" class="btn-ajouter">Ajouter un projet</a>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projet in Model)
        {
            <tr>
                <td>@projet.titre</td>
                <td class="action-links">
                    <a asp-controller="Tache" asp-action="Index" asp-route-projetId="@projet.id">Voir les tâches</a>
                    <a asp-action="Delete" asp-route-id="@projet.id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

